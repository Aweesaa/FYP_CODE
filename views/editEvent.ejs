<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Event</title>
</head>

<body>
    <h1>Edit Event</h1>

    <form action="/editEvent/<%= event._id %>" method="post" enctype="multipart/form-data">
        <!-- Include form fields for editing event details -->
        <!-- Example: -->
        <label for="event_name">Name of Event:</label>
        <input type="text" placeholder="<%= event.event_name %>" id="event_name" name="event_name">
        <br>
        <label for="event_date">Date of Event:</label>
        <input type="date" placeholder="<%= event.event_date %>" id="event_date" name="event_date">
        <br>
        <label for="description">Description:</label>
        <input type="text" placeholder="<%= event.description %>" id="description" name="description">
        <br>
        <label for="event_location">Location:</label>
        <input type="text" placeholder="<%= event.event_location %>" id="event_location" name="event_location">
        <br>
        <label for="event_details">Details:</label>
        <input type="text" placeholder="<%= event.event_details %>" id="event_details" name="event_details">
        <br>
        <label for="event_image">Upload an image for the event:</label>
        <input type="file" id="event_image" name="event_image" accept="image/*">
        <br>
        <% aofcheckboxes.forEach(checkbox => { %>
            <input
                type="checkbox"
                name="aof"
                value="<%= checkbox.value %>"
                <% if (event.aof.includes(checkbox.value)) { %>
                    checked
                <% } %>
            >
            <%= checkbox.label %><br>
        <% }); %>

        <input type="hidden" name="default_event_name" value="<%= event.event_name %>">
        <input type="hidden" name="default_event_date" value="<%= event.event_date %>">
        <input type="hidden" name="default_description" value="<%= event.description %>">
        <input type="hidden" name="default_event_location" value="<%= event.event_location %>">
        <input type="hidden" name="default_event_details" value="<%= event.event_details %>">

        <button type="submit">Save Changes</button>
    </form>
    
</body>

</html>